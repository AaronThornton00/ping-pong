!!!
%html
  %head
    %title PingPong
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %p.notice= notice
    %p.alert= alert
    = yield

    :javascript
      window.PP.properties = window.PP.properties || {}
    = content_for :page_js
    :javascript
      window.PP.runtime = new window.PP.App('#{controller_path.camelize}', '#{action_name}', window.PP.properties);
